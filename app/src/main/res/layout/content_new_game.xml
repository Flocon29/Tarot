<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_new_game" tools:context="flo.tarot.NewGameActivity">


    <EditText
        android:hint="joueur 1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/j1"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <EditText
        android:hint="joueur 2"
        android:layout_below="@id/j1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/j2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <EditText
        android:hint="joueur 3"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/j3"
        android:layout_below="@id/j2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <EditText
        android:hint="joueur 4"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:id="@+id/j4"
        android:layout_below="@id/j3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <EditText
        android:hint="joueur 5"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:id="@+id/j5"
        android:layout_below="@id/j4"
        android:layout_alignParentLeft="true"/>
</RelativeLayout>
